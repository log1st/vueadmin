{
  "root": true,
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": [0],
    "import/extensions": [0],
    "import/no-unresolved": [0],
    "no-nested-ternary": [0],
    "quotes": [1, "double"],
    "import/no-cycle": [0]
  },
  "overrides": [
    {
      "files": ["*.vue"],
      "extends": [
        "plugin:vue/vue3-recommended",
        "@vue/eslint-config-airbnb-with-typescript"
      ]
    }
  ]
}