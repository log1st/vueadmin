{
  "root": true,
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": [0],
    "import/extensions": [0],
    "import/no-unresolved": [0],
    "no-nested-ternary": [0],
    "quotes": [1, "double"]
  },
  "overrides": [
    {
      "files": ["*.vue"],
      "extends": [
        "plugin:vue/vue3-recommended"
      ],
      "parser": "vue-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
      }
    }
  ]
}